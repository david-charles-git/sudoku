{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "outDir": "dist/js",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
  },
  "include": [
    "src/scripts/**/*.ts",
    "src/scripts/**/*.d.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "paths": {
    "@/*": ["./src/scripts/*"]
  }
}
